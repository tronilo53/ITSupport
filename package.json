{
  "build": {
    "copyright": "ltm dev ITSupport. Adm.",
    "directories": {
      "output": "release",
      "buildResources": "dist"
    },
    "files": [
      "**/*",
      "dist/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "tronilo53",
      "repo": "ITSupport",
      "private": false,
      "releaseType": "release"
    },
    "asar": false,
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "removeDefaultUninstallWelcomePage": false,
      "installerIcon": "build/installerIcon.ico",
      "uninstallerIcon": "build/uninstallerIcon.ico",
      "installerHeaderIcon": "build/installerHeaderIcon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": false,
      "shortcutName": "ITSupport",
      "runAfterFinish": false
    }
  },
  "name": "ITSupport",
  "version": "1.0.2",
  "main": "main.js",
  "license": "MIT",
  "description": "ITSupport program for the configuration of Avaya One X Agent",
  "author": "Luis Tronilo - ITSupport",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build && electron .",
    "setupProd": "ng build && electron-builder -p always",
    "setupDev": "ng build && electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "animate.css": "^4.1.1",
    "bootstrap": "^5.2.3",
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0",
    "jquery": "^3.6.3",
    "material-symbols": "^0.4.4",
    "popper.js": "^1.16.1",
    "rxjs": "~7.5.0",
    "serial-number": "^1.3.0",
    "sweetalert2": "^11.7.1",
    "tslib": "^2.3.0",
    "xml-js": "^1.6.11",
    "xml2js": "^0.4.23",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.1",
    "@angular/cli": "~14.2.1",
    "@angular/compiler-cli": "^14.0.0",
    "@types/jasmine": "~4.0.0",
    "electron": "^23.0.0",
    "electron-builder": "^23.6.0",
    "jasmine-core": "~4.3.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~4.7.2"
  }
}
